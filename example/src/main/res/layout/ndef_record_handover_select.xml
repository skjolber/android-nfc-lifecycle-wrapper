<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/handoverSelect"
		android:padding="3dip"
        android:textColor="@color/ndefText"
		android:textStyle="bold"
	/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/handoverSelectMajorVersion"
				android:textColor="@color/ndefText"
                />

            <TextView
                android:gravity="left"
                android:padding="3dip"
        	    android:id="@+id/handoverSelectMajorVersionValue"
				android:textColor="@color/ndefText"
            />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/handoverSelectMinorVersion"
				android:textColor="@color/ndefText"
                 />

            <TextView
                android:gravity="left"
                android:padding="3dip"
        	    android:id="@+id/handoverSelectMinorVersionValue"
				android:textColor="@color/ndefText"
                 />
        </TableRow>
        
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/handoverSelectAlternativeCarriers"
				android:textColor="@color/ndefText"
                 />

            <TextView
                android:gravity="left"
                android:padding="3dip"
        	    android:id="@+id/handoverSelectAlternativeCarriersValue"
				android:textColor="@color/ndefText"
                 />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="@string/handoverSelectError"
				android:textColor="@color/ndefText"
                 />

            <TextView
                android:gravity="left"
                android:padding="3dip"
        	    android:id="@+id/handoverSelectErrorValue"
				android:textColor="@color/ndefText"
                 />
        </TableRow>

         
    </TableLayout>
    
    
</LinearLayout>
